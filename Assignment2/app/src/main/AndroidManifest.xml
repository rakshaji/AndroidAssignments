<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.raksha.assignment.assignment2" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:uiOptions="splitActionBarWhenNarrow"
            android:name="com.raksha.assignment.assignment2.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>
        <activity android:uiOptions="splitActionBarWhenNarrow"
            android:name=".DateActivity"
            android:label="@string/title_activity_date"
            android:parentActivityName="com.raksha.assignment.assignment2.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.raksha.assignment.assignment2.MainActivity" />
            <meta-data android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>
        <activity android:uiOptions="splitActionBarWhenNarrow"
            android:name=".KeyboardActivity"
            android:label="@string/title_activity_keyboard"
            android:parentActivityName="com.raksha.assignment.assignment2.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.raksha.assignment.assignment2.MainActivity" />
            <meta-data android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>
        <activity android:uiOptions="splitActionBarWhenNarrow"
            android:name=".ListActivity"
            android:label="@string/title_activity_list"
            android:parentActivityName="com.raksha.assignment.assignment2.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.raksha.assignment.assignment2.MainActivity" />
            <meta-data android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>
    </application>

</manifest>
